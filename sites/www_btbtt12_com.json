{
    "id": "btbtt",
    "name": "BT之家",
    "domain": "https://www.btbtt12.com",
    "encoding": "UTF-8",
    "public": true,
    "search": {
        "paths": [
            {
                "path": "search-index-keyword-{keyword}.htm",
                "method": "get"
            }
        ],
        "rules": [
            {
                "selectors": [
                    "#threadlist"
                ],
                "allow": [
                    "/thread-index-fid-\\d+-tid-\\d+.htm"
                ],
                "torrents": true
            }
        ]
    },
    "torrents": {
        "list": {
            "selector": "body"
        },
        "common": {
            "fid": {
                "selector": ".attachlist a",
                "attribute": "href",
                "filters": [
                    {
                        "name": "findall",
                        "args": [
                            "fid-(\\d+)",
                            0
                        ]
                    }
                ]
            },
            "aid": {
                "selector": ".attachlist a",
                "attribute": "href",
                "filters": [
                    {
                        "name": "findall",
                        "args": [
                            "aid-(\\d+)",
                            0
                        ]
                    }
                ]
            }
        },
        "fields": {
            "id": {
                "selector": ".attachlist a",
                "attribute": "href"
            },
            "title_optional": {
                "selector": "a"
            },
            "title": {
                "selector": "h2"
            },
            "enclosure": {
                "selector": "a",
                "attribute": "href",
                "fmt": "https://www.btbtt12.com/attach-download-fid-{{fid}}-aid-{{aid}}.htm"
            }
        }
    }
}